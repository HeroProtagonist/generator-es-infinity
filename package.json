{
  "name": "generator-es-infinity",
  "version": "0.0.0",
  "description": "Bootstrap common libraries needed to write es6 and beyond",
  "homepage": "https://github.com/HeroProtagonist/generator-es-infinity",
  "author": {
    "name": "Jordan Tepper",
    "email": "jstepper91@gmail.com",
    "url": ""
  },
  "files": ["generators"],
  "main": "generators/index.js",
  "keywords": [
    "ecmascript",
    "es6",
    "es-next",
    "prettier",
    "eslint",
    "webpack",
    "babel",
    "yeoman-generator"
  ],
  "devDependencies": {
    "eslint": "^4.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "lint-staged": "^4.2.1",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "isomorphic-fetch": "^2.2.1",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "HeroProtagonist/generator-es-inifinity",
  "license": "MIT"
}
